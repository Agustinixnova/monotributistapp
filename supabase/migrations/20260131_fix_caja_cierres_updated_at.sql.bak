-- Agregar columna updated_at a caja_cierres si no existe
DO $$
BEGIN
  IF NOT EXISTS (
    SELECT 1 FROM information_schema.columns 
    WHERE table_schema = 'public' 
    AND table_name = 'caja_cierres' 
    AND column_name = 'updated_at'
  ) THEN
    ALTER TABLE public.caja_cierres ADD COLUMN updated_at TIMESTAMPTZ DEFAULT NOW();
  END IF;
END $$;
